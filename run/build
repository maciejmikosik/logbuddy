#!/bin/bash -e

HERE=`dirname ${0}`
cd "${HERE}/.."
PROJECT=`pwd`
	RUN="${PROJECT}/run"
	BUILDING="/tmp/build_logbuddy"

	MAIN="${PROJECT}/main"
		JAVA="${MAIN}/java"
		JAR="${MAIN}/jar"

########## CLEANUP ##########
rm \
  --recursive \
  --force \
  ${BUILDING}

mkdir \
  --parents \
  ${BUILDING}

########## COMPILE SOURCES ##########
javac \
  -classpath "${JAR}/byte-buddy-1.4.19.jar:${JAR}/objenesis-2.4.jar" \
  -sourcepath "${JAVA}" \
  -source 1.8 \
  -target 1.8 \
  -d "${BUILDING}" \
  "${JAVA}/org/logbuddy/Build.java"

########## COPY SOURCES ##########
cp \
  --recursive \
  "${JAVA}/." \
  "${BUILDING}"

########## COPY DEPENDENCIES ##########
unzip \
  -q \
  "${JAR}/byte-buddy-1.4.19.jar" \
  -d "${BUILDING}" \
  net/*
unzip \
  -q \
  "${JAR}/objenesis-2.4.jar" \
  -d "${BUILDING}" \
  org/*

########## COPY LICENSE ##########
cp \
  "${RUN}"/*license* \
  "${BUILDING}"
cp \
  "${PROJECT}"/LICENSE.txt \
  "${BUILDING}"

########## RESET TIMESTAMPS ##########
find \
  ${BUILDING}/ \
| xargs \
touch \
  --date=@0

########## ZIP JAR ##########
cd ${BUILDING}
zip \
  --quiet \
  --recurse-paths \
  ./logbuddy.jar \
  ./*
cd "${PROJECT}"

########## GENERATE SHADING MAP ##########

jar tf ${BUILDING}/logbuddy.jar \
  | grep "\.class$" \
  | grep -v "$org/logbuddy/" \
  | sed 's/\.class$//g' \
  | sed  's/\//\./g' \
  | xargs -I{} echo {} -\> org.logbuddy.shaded.{} : \
  > ${BUILDING}/shading_map.txt

########## SHADE DEPENDENCIES ##########
java \
  -cp "${RUN}/proguard-base-5.3.1.jar" \
  proguard.ProGuard \
  -injars "${BUILDING}/logbuddy.jar" \
  -outjars "${BUILDING}/logbuddy-shaded.jar" \
  -dontwarn org.objenesis.** \
  -dontnote org.objenesis.** \
  -dontwarn net.bytebuddy.** \
  -dontnote net.bytebuddy.** \
  -dontwarn org.logbuddy.** \
  -dontshrink \
  -dontoptimize \
  -dontpreverify \
  -keepattributes \* \
  -keepparameternames \
  -keepclassmembers class \* { \
   \*\*\* \*\; \
   \*\*\* \*\(...\)\; \
  } \
  -keep class org.logbuddy.** \
  -applymapping "${BUILDING}/shading_map.txt"

mv "${BUILDING}/logbuddy-shaded.jar" "${BUILDING}/logbuddy.jar"

########## BUILD SUCCESSFUL ##########

echo ""
echo "BUILD SUCCESSFUL"
echo "created ${BUILDING}/logbuddy.jar"
echo "sha1sum=`sha1sum ${BUILDING}/logbuddy.jar | cut -f1 -d' '`"


