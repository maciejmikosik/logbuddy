#!/bin/bash -e

HERE=`dirname ${0}`
cd "${HERE}/.."
PROJECT=`pwd`
	RUN="${PROJECT}/run"
	BUILDING="/tmp/build_logbuddy"

	MAIN="${PROJECT}/main"
		JAVA="${MAIN}/java"
		JAR="${MAIN}/jar"

########## CLEANUP ##########
rm \
  --recursive \
  --force \
  ${BUILDING}

mkdir \
  --parents \
  ${BUILDING}

########## COMPILE SOURCES ##########
javac \
  -classpath "${JAR}/byte-buddy-1.6.6.jar:${JAR}/objenesis-2.4.jar" \
  -sourcepath "${JAVA}" \
  -source 1.8 \
  -target 1.8 \
  -d "${BUILDING}" \
  "${JAVA}/org/logbuddy/Build.java"

########## COPY SOURCES ##########
cp \
  --recursive \
  "${JAVA}/." \
  "${BUILDING}"

########## COPY DEPENDENCIES ##########
unzip \
  -q \
  "${JAR}/byte-buddy-1.6.6.jar" \
  -d "${BUILDING}" \
  net/*
unzip \
  -q \
  "${JAR}/objenesis-2.4.jar" \
  -d "${BUILDING}" \
  org/*

########## COPY LICENSE ##########
cp \
  "${RUN}"/*license* \
  "${BUILDING}"
cp \
  "${PROJECT}"/LICENSE.txt \
  "${BUILDING}"

########## RESET TIMESTAMPS ##########
find \
  ${BUILDING}/ \
| xargs \
touch \
  --date=@0

########## ZIP JAR ##########
cd ${BUILDING}
zip \
  --quiet \
  --recurse-paths \
  ./logbuddy.jar \
  ./*
cd "${PROJECT}"

########## BUILD SUCCESSFUL ##########

echo ""
echo "BUILD SUCCESSFUL"
echo "created ${BUILDING}/logbuddy.jar"
echo "sha1sum=`sha1sum ${BUILDING}/logbuddy.jar | cut -f1 -d' '`"


